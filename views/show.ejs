<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Hissab - <%= filename.split('.')[0] %></title>
    <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind CSS -->
</head>
<body class="bg-gray-100 text-gray-900">

    <!-- Navbar -->
    <nav class="bg-blue-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Left side: Khatabook title -->
            <a href="/" class="text-2xl font-bold">Khatabook</a>

            <!-- Right side: Navigation links -->
            <div class="flex space-x-6">
                <a href="/" class="text-lg hover:underline">Home</a>
                <a href="/create" class="text-lg hover:underline">Create New Hissab</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto py-10 px-6">
        <!-- Page Title -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold">Hissab File: <%= filename.split('.')[0] %></h1>
            <p class="text-gray-600">File Content:</p>
        </div>

        <!-- File Content -->
        <div class="bg-white shadow-md rounded-lg p-6">
            <pre class="whitespace-pre-wrap font-mono text-gray-800"><%= showhissab %></pre>
        </div>

        <!-- Back Button -->
        <div class="mt-6">
            <a href="/" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                Back to Home
            </a>
        </div>
    </div>
</body>
</html>
