<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Hissab</title>
    <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind CSS -->
</head>
<body class="bg-gray-100 text-gray-900">

    <!-- Navbar -->
    <nav class="bg-blue-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-2xl font-bold">Khatabook</a>
            <div class="flex space-x-6">
                <a href="/" class="text-lg hover:underline">Home</a>
                <a href="/create" class="text-lg hover:underline">Create New Hissab</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto py-10 px-6">
        <h1 class="text-3xl font-bold mb-6">Edit Hissab File: <%= filename.split('.')[0] %></h1>
        
        <!-- Edit Form -->
        <form action="/update/<%= filename %>" method="POST" class="bg-white shadow-md rounded-lg p-6">
            <div class="mb-4">
                <label for="content" class="block text-lg font-medium mb-2">File Content</label>
                <textarea id="content" name="content" rows="10" class="border border-gray-300 p-3 rounded w-full focus:outline-none focus:ring-2 focus:ring-blue-600"
                    placeholder="Edit the content..."><%= data %></textarea>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</body>
</html>
